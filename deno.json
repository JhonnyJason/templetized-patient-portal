{
    "tasks": {
        "dev": "deno run --watch --deny-env --allow-read --allow-write",
        "introspect-original": "deno run --allow-net=0.0.0.0 --allow-read=./original-html ./src/introspect-files.js ./original-html/",
        "introspect-output": "deno run --allow-net=0.0.0.0 --allow-read=./output-html ./src/introspect-files.js ./output-html/",
        "dissect-html": "deno run --allow-read=./original-html --allow-write=./dissected ./src/dissect-html.js $1",
        "templatize-stripped": "deno run --allow-write=./dissected/ --allow-read --allow-env --allow-import ./src/templatizor.js",
        "render-normalized": "deno run --allow-read=./dissected --allow-write=./dissected ./src/render-normalized.js"
    },
    "lint": { "rules": { "exclude": ["no-var"]  } },
    "imports": {
        "@std/path": "jsr:@std/path@^1.1.3"
    }
}